{
   "action": {
      "default_icon": {
         "128": "icons/icon128.png",
         "16": "icons/icon16.png",
         "32": "icons/icon32.png",
         "48": "icons/icon48.png"
      },
      "default_popup": "popup.html",
      "default_title": "Export Bookmarks"
   },
   "background": {
      "service_worker": "background.js"
   },
   "description": "Easily export all your Twitter/X bookmarks and followers/following to a JSON file with one click",
   "host_permissions": [ "https://twitter.com/*", "https://x.com/*" ],
   "icons": {
      "128": "icons/icon128.png",
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
   },
   "manifest_version": 3,
   "name": "Twitter Bookmark & Followers Exporter",
   "permissions": [ "activeTab", "downloads", "scripting" ],
   "version": "1.0"
}
